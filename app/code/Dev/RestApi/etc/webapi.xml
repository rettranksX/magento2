<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/rest_dev/getProducts" method="POST">
        <service class="Dev\RestApi\Api\ProductRepositoryInterface" method="execute" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/rest_dev/test" method="GET">
        <service class="Dev\RestApi\Api\HelloInterface" method="getHelloMessage" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
